{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "experimentalDecorators": true,
    "baseUrl": "",
    "stripInternal": true,
    "outDir": "../dist",
    "rootDir": ".",
    "sourceMap": true,
    "inlineSources": true,
    "types": [],
    "lib": ["es6", "dom"],
    "typeRoots": [
      "../node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "files": [
    "./scripts/index.ts"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "genDir": "../tmp/factories",
    "skipTemplateCodegen": true,
    "debug": true
  }
}
